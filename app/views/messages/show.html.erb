<div id="project_name">
	<a class="back_link" class="transition" href="/projects/stack/all">Back</a>
	<div id="project_holder">
		<h3>Your messages</h3>
	<% @messages.reverse.each do |message|%>
	  <p>From: <%=message.ninja.ninja_name%></p>
	  <p>Project: <%=message.project.name%></p>
	  <p>Message: <%=message.content%></p>
	  <p>Sent on: <%=message.created_at.in_time_zone("Pacific Time (US & Canada)").strftime(" %b, %A %Y %I:%M%p")%></p>
	  <a class="transition" href="/messages/<%=message.ninja.id%>/new">Reply</a><br><br>
	  <form action="/teams/<%=message.id%>" method="post">
	  	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
	  	<a href="#" onclick="this.parentNode.submit()">Add to the team</a>
	  </form><br>
	  <a  data-method="delete" href="/messages/<%=message.id%>">Delete</a>
	<%end%>
	</div>
</div>
