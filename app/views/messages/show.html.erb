<div id="project_name">
	<a class="back_link" class="transition" href="/projects/stack/all">Back</a>
	<div id="project_holder">
		<h3>Your messages</h3>
	<% @messages.each do |message|%>
	  <p>From: <%=message.ninja.ninja_name%></p>
	  <p>Project: <%=%></p>
	  <p>Message: <%=message.content%></p>
	  <p>Sent on: <%=message.created_at%></p>
	  <a class="transition" href="/messages/<%=message.ninja.id%>/new">Reply</a>
		<form action="/teams/<%=message.id%>"  class="transition" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
			<input type="hidden" name="project_id" value="<%=@project.id%>" >
			<input type="submit" value="Add to the team">
		</form>
	  <a data-method="delete" class="transition" href="/messages/<%=message.id%>">Delete</a>
	<%end%>
	</div>
</div>
