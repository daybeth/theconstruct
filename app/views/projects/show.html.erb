<h1><%= @project.name%></h1>
<p>By <a href="/ninjas/<%=@project.ninja.id%>"><b><%=@project.ninja.ninja_name%></b></a></p>
<b>Description</b>
<p><%= @project.description%></p>
<b>Leave a comment</b>

<form action="/comments" method="post">
	<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
	<p><label for="comment"></label>
	<textarea name="content" id="comment" cols="30" rows="5"></textarea></p>
	<input type="submit" value="Send comment">
</form>
<% @comments.each do |c|%>
<p><%=c.ninja.ninja_name%> said, <%=c.content%><%=c.created_at%></p>
<%end%>
<p><a href="/messages/<%=@creator%>/new">Send a message to Join team</a></p>
<a href="/projects">Back</a>
