 <div id="project_name">
	<h2>Project Name:<%= @project.name%> </h2>

<div id="project_holder">
	<p>By <a  class="transition" href="/ninjas/<%=@project.ninja.id%>"><b><%=@project.ninja.ninja_name%></b></a></p>
	<b>Description</b>
	<p><%= @project.description%></p>
	<h1>Wireframe</h1>
	<p><a  class="transition" href="/messages/<%=@creator%>/new">Send a message to Join team</a></p>
	<b>Leave a comment</b>
	<form  class="transition" action="/comments" method="post">
		<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
		<p><label for="comment"></label>
		<textarea name="content" id="comment" cols="30" rows="5"></textarea></p>
		<input type="submit" value="Send comment">
	</form>

<% @comments.each do |c|%>
<p><%=c.ninja.ninja_name%> said, <%=c.content%><%=c.created_at%></p>
<%end%>

<a  class="transition" href="/projects/stack/all">Back</a>
</div>
</div>
